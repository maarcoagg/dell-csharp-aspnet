@model IEnumerable<Projetos.Models.Consultas>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <h2>Consultas do Paciente:</h2>
    <style>
        h2 {
            text-align: center;
        }
        h4 {
            text-align: center;
        }
        table, td, th {
        border: 2px solid black;
        }

        table {
        border-collapse: collapse;
        width: 400px;
        text-align: center;
        margin-left:auto;
        margin-right:auto;
        }

        th {
        height: 50px;
        }
        td {
            color:#6495ED;
        }
    </style>
</head>
<body>
<h4>Datas das consultas deste paciente</h4>
<table class="table" style="margin-left:auto;margin-right:auto;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataConsulta)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataConsulta)
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
